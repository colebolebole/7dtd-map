{
  "name": "7dtd-map",
  "version": "1.0.0",
  "description": "Map renderer for 7 Days to Die",
  "private": true,
  "scripts": {
    "serve": "./tools/build.bash serve",
    "build": "run-p build:**",
    "build:ts": "./tools/build.bash",
    "build:json": "tsx ./tools/generate-jsons.ts",
    "build:json:prefab-props": "tsx ./tools/generate-prefab-properties-jsons.ts",
    "build:json:labels": "tsx ./tools/generate-labels-jsons.ts",
    "build:prefab-html": "tsx ./tools/generate-prefab-html.ts",
    "fix": "run-s fix:**",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "lint": "run-p lint:**",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:tsc:src": "tsc -p src --noEmit",
    "lint:tsc:tools": "tsc -p tools --noEmit",
    "test": "jest --config src/jest.config.ts",
    "ci": "run-p lint test"
  },
  "author": "Keiichiro UI",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/css-font-loading-module": "0.0.13",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/pngjs": "^6.0.5",
    "@types/three": "^0.165.0",
    "@types/webpack": "^5.28.5",
    "@types/xml2js": "^0.4.14",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "csv-parse": "^5.5.6",
    "esbuild": "0.21.5",
    "eslint": "^9.5.0",
    "glob-promise": "^6.0.7",
    "idb": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pngjs": "^7.0.0",
    "prettier": "^3.3.2",
    "three": "~0.165.0",
    "ts-jest": "^29.1.4",
    "tsx": "^4.15.5",
    "typescript": "~5.4.5",
    "typescript-eslint": "^8.0.0-alpha.10",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": "~20.14.0"
  }
}
